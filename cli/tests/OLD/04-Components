#!/bin/bash

declare="${BOX_FUNCTIONS_FILE:=}"
source "${BOX_FUNCTIONS_FILE}"

TESTS_TOTAL=0
TESTS_PASSED=0
TESTS_FAILED=0
run_test() {
    (( TESTS_TOTAL++ ))
    local expr="$1"
    local value="$2"
    if [ "$(eval "${expr}")" == "${value}" ] ; then
        (( TESTS_PASSED++ ))
    else
        echo "Fail: ${expr} <> ${value}"
        (( TESTS_FAILED++ ))
    fi
}
run_test "get_image_name wplib/mysql:5.5.60 60" "wplib/mysql:5.5.60"
run_test "get_image_name mysql:5.5.60       60" "wplib/mysql:5.5.60"
run_test "get_image_name mysql:5.5.59       60" "wplib/mysql:5.5.59"
run_test "get_image_name mysql-5.5.60       60" "wplib/mysql:5.5.60"
run_test "get_image_name mysql:5.5          60" "wplib/mysql:5.5.60"
run_test "get_image_name mysql-5.5          60" "wplib/mysql:5.5.60"

run_test "get_image_name wplib/php-fpm:7.1.17 17" "wplib/php-fpm:7.1.17"
run_test "get_image_name php-fpm:7.1.17       17" "wplib/php-fpm:7.1.17"
run_test "get_image_name php-fpm:7.1.16       17" "wplib/php-fpm:7.1.16"
run_test "get_image_name php-fpm-7.1.17       17" "wplib/php-fpm:7.1.17"
run_test "get_image_name php-fpm:7.1          17" "wplib/php-fpm:7.1.17"
run_test "get_image_name php-fpm-7.1          17" "wplib/php-fpm:7.1.17"

run_test "get_container_name wplib/mysql:5.5.60 60" "mysql-5.5.60"
run_test "get_container_name mysql:5.5.60       60" "mysql-5.5.60"
run_test "get_container_name mysql:5.5.59       60" "mysql-5.5.59"
run_test "get_container_name mysql-5.5.60       60" "mysql-5.5.60"
run_test "get_container_name mysql-5.5          60" "mysql-5.5.60"

run_test "get_container_name wplib/php-fpm:7.1.17 17" "php-fpm-7.1.17"
run_test "get_container_name php-fpm:7.1.17       17" "php-fpm-7.1.17"
run_test "get_container_name php-fpm:7.1.16       17" "php-fpm-7.1.16"
run_test "get_container_name php-fpm-7.1.17       17" "php-fpm-7.1.17"
run_test "get_container_name php-fpm-7.1          17" "php-fpm-7.1.17"

if [ 0 -ne $TESTS_FAILED ] ; then
    echo "${TESTS_FAILED} of ${TESTS_TOTAL} tests FAILED."
    exit 1
fi
if [ 0 -ne $TESTS_PASSED ] ; then
    echo "${TESTS_PASSED} of ${TESTS_TOTAL} tests passed."
    exit 0
fi



